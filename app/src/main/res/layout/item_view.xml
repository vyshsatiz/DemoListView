<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/item_textMake"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/item_txtCondition"
        android:layout_toStartOf="@+id/item_txtCondition"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_txtCondition"
        android:text="Condition shown here"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_alignBottom="@+id/item_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/accent"
        android:id="@+id/item_icon"
        android:adjustViewBounds="true"
        android:maxHeight="90dp"
        android:minWidth="90dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/item_textMake"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
